<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Newsfeed #<%= @newsfeed.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/newsfeeds" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @newsfeed.user %>
          <a href="/newsfeeds/<%= @newsfeed.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit newsfeed
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @newsfeed.user %>
          <a href="/delete_newsfeed/<%= @newsfeed.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete newsfeed
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @newsfeed.user.present? %>
          <a href="/users/<%= @newsfeed.user_id %>">
            <%= @newsfeed.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Profile
      </dt>
      <dd>
        <%= @newsfeed.profile_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@newsfeed.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@newsfeed.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

