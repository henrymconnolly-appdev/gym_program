<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All newsfeeds
    </h1>

    <a href="/newsfeeds/new" class="btn btn-block btn-outline-secondary">
      Add a new newsfeed
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Profile
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @newsfeeds.each do |newsfeed| %>
      <tr>
        <!-- Display newsfeed.id start -->
        <td>
          <%= newsfeed.id %>
        </td>
        <!-- Display newsfeed.id end -->

        <!-- Display newsfeed.user_id start -->
        <td>
          <%= newsfeed.user.email %>
        </td>
        <!-- Display newsfeed.user_id end -->

        <!-- Display newsfeed.profile_id start -->
        <td>
          <%= newsfeed.profile_id %>
        </td>
        <!-- Display newsfeed.profile_id end -->

        <!-- Display newsfeed.created_at start -->
        <td>
          <%= time_ago_in_words(newsfeed.created_at) %> ago
        </td>
        <!-- Display newsfeed.created_at end -->

        <!-- Display newsfeed.updated_at start -->
        <td>
          <%= time_ago_in_words(newsfeed.updated_at) %> ago
        </td>
        <!-- Display newsfeed.updated_at end -->

        <td>
          <a href="/newsfeeds/<%= newsfeed.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
