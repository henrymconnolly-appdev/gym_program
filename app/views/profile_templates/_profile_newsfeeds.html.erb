<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Newsfeeds

    <a data-toggle="collapse" href="#profile_newsfeeds_new_form">
      Add newsfeed
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @profile.newsfeeds.each do |newsfeed| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/newsfeeds/<%= newsfeed.id %>">
          <%= newsfeed.user_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_newsfeed_from_follower/<%= newsfeed.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="profile_newsfeeds_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "profile_templates/profile_newsfeeds_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
