<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Newsfeeds

    <a data-toggle="collapse" href="#profile_newsfeeds_new_form">
      Add newsfeed
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @profile.newsfeeds.each do |newsfeed| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/newsfeeds/<%= newsfeed.id %>">
          <%= newsfeed.user_id %>
        </a>

        <%if current_user == newsfeed.user %>
          <a href="/delete_newsfeed_from_profile/<%= newsfeed.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="profile_newsfeeds_new_form">
        <%= render partial: "profile_templates/profile_newsfeeds_new_form" %>
      </div>
    </div>

  </ul>
</div>
