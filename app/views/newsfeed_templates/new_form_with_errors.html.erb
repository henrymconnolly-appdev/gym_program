<% if @newsfeed.present? %>
  <% if @newsfeed.errors.any? %>
    <% @newsfeed.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new newsfeed
</h1>


<hr>

<form action="/create_newsfeed" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="profile_id">
      Profile
    </label>

    <input type="text" id="profile_id" name="profile_id" class="form-control" value="<%= @newsfeed.profile_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create newsfeed
  </button>
</form>

<hr>

<a href="/newsfeeds">
  Go back
</a>
