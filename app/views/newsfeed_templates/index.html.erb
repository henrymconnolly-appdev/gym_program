<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All newsfeeds
    </h1>

    <a href="/newsfeeds/new" class="btn btn-block btn-outline-secondary">
      Add a new newsfeed
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "newsfeed_templates/newsfeeds_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Profile
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @newsfeeds.each do |newsfeed| %>
      <tr>
        <td>
          <%= newsfeed.id %>
        </td>

        <td>
          <% if newsfeed.user.present? %>
            <a href="/users/<%= newsfeed.user.id %>">
              <%= newsfeed.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= newsfeed.profile_id %>
        </td>

        <td>
          <%= time_ago_in_words(newsfeed.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(newsfeed.updated_at) %> ago
        </td>

        <td>
          <a href="/newsfeeds/<%= newsfeed.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @newsfeeds, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
