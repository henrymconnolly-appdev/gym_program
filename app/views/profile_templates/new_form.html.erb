<h1>
  Add a new profile
</h1>


<hr>

<form action="/create_profile" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="total_lift">
      Total lift
    </label>

    <input type="text" id="total_lift" name="total_lift" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create profile
  </button>
</form>

<hr>

<a href="/profiles">
  Go back
</a>
